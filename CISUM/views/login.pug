script(src="/javascripts/login.js")
link(rel="stylesheet", href="/stylesheets/login.css")
article(id="login-body")
    form
        div.login_close
            span(id="login-span") &times;
        h2 LOGIN
        p(id="login-status-text")
        input(name="m_userid", id="userid", placeholder="E-mail", type="text", spellcheck="false")
        input(name="m_password", id="password", placeholder="Password", type="password")
        button(type="button", id="login-btn") 로그인
        button(id="register", type="button") 회원가입
        div.social_logobox
            img(id="google-logo",src="../images/google.png", onClick="googleLoginPopup()")
            img(id="facebook-logo",src="../images/facebook.png", onClick="facebookLoginPopup()")
            img(id="github-logo",src="../images/github.png", onClick="githubLoginPopup()")